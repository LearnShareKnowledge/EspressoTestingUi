<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.mypackage.espressotestingui.MainActivity">

    <EditText
        android:hint="Enter the text here"
        android:id="@+id/etTextToChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></EditText>

    <Button
        android:layout_below="@id/etTextToChange"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change text"
        android:id="@+id/btnChange"/>


    <TextView
        android:text="this will display the changed text"
        android:layout_below="@id/btnChange"
        android:id="@+id/tvChangedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
